<!-- app/views/posts/new.html.erb -->
<div class="max-w-2xl mx-auto">
  <h1 class="text-2xl font-bold mb-6">Create a New Post</h1>

  <%= form_with(model: @post, local: true, class: "space-y-4") do |f| %>
    <% if @post.errors.any? %>
      <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded">
        <h2><%= pluralize(@post.errors.count, "error") %> prohibited this post from being saved:</h2>
        <ul class="list-disc list-inside">
          <% @post.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div>
      <%= f.label :content, class: "block text-sm font-medium text-gray-700 mb-1" %>
      <%= f.text_area :content, rows: 4, class: "w-full p-2 border rounded-md focus:ring-blue-500 focus:border-blue-500" %>
    </div>

    <div class="flex justify-end">
      <%= f.submit "Create Post", class: "bg-blue-500 text-white px-4 py-2 rounded-md hover:bg-blue-600" %>
    </div>
  <% end %>
</div>