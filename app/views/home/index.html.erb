<!-- app/views/home/index.html.erb -->
<div class="max-w-3xl mx-auto text-center py-12">
  <h1 class="text-4xl font-bold mb-4">Welcome to Borzonibook</h1>
  <p class="text-xl text-gray-600 mb-8">Connect with friends and share your thoughts</p>
  
  <% unless user_signed_in? %>
    <div class="space-x-4">
      <%= link_to "Sign Up", new_user_registration_path, class: "bg-blue-500 text-white px-6 py-3 rounded-lg font-medium hover:bg-blue-600" %>
      <%= link_to "Sign In", new_user_session_path, class: "bg-gray-500 text-white px-6 py-3 rounded-lg font-medium hover:bg-gray-600" %>
    </div>
  <% end %>
</div>