<div class="max-w-2xl mx-auto mt-8 p-6 bg-white rounded-lg shadow">
  <h1 class="text-2xl font-bold mb-6">Edit Profile</h1>

  <%= form_with(model: @user, method: :patch, local: true, html: { class: "space-y-6" }) do |f| %>
    <% if @user.errors.any? %>
      <div class="bg-red-50 text-red-500 p-4 rounded mb-6">
        <h2 class="font-bold"><%= pluralize(@user.errors.count, "error") %> prohibited this update:</h2>
        <ul class="list-disc list-inside">
          <% @user.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div>
      <%= f.label :username, class: "block text-sm font-medium text-gray-700 mb-1" %>
      <%= f.text_field :username, class: "w-full p-2 border rounded-md focus:ring-green-500 focus:border-green-500" %>
    </div>

    <div>
      <%= f.label :email, class: "block text-sm font-medium text-gray-700 mb-1" %>
      <%= f.email_field :email, class: "w-full p-2 border rounded-md focus:ring-green-500 focus:border-green-500" %>
    </div>

    <div>
      <%= f.label :bio, class: "block text-sm font-medium text-gray-700 mb-1" %>
      <%= f.text_area :bio, rows: 4, class: "w-full p-2 border rounded-md focus:ring-green-500 focus:border-green-500" %>
    </div>

    <div class="border-t pt-6 mt-6">
      <h3 class="text-lg font-medium mb-4">Change Password</h3>
      <p class="text-sm text-gray-500 mb-4">Leave blank if you don't want to change it</p>
      
      <div class="space-y-4">
        <div>
          <%= f.label :current_password, class: "block text-sm font-medium text-gray-700 mb-1" %>
          <%= f.password_field :current_password, class: "w-full p-2 border rounded-md focus:ring-green-500 focus:border-green-500" %>
        </div>

        <div>
          <%= f.label :password, "New Password", class: "block text-sm font-medium text-gray-700 mb-1" %>
          <%= f.password_field :password, class: "w-full p-2 border rounded-md focus:ring-green-500 focus:border-green-500" %>
        </div>

        <div>
          <%= f.label :password_confirmation, "Confirm New Password", class: "block text-sm font-medium text-gray-700 mb-1" %>
          <%= f.password_field :password_confirmation, class: "w-full p-2 border rounded-md focus:ring-green-500 focus:border-green-500" %>
        </div>
      </div>
    </div>

    <div class="flex justify-end space-x-4 pt-6">
      <%= link_to "Cancel", profile_path, class: "px-4 py-2 border rounded-md hover:bg-gray-50" %>
      <%= f.submit "Update Profile", class: "px-4 py-2 bg-green-500 text-white rounded-md hover:bg-green-600" %>
    </div>
  <% end %>
</div>