<!-- app/views/users/index.html.erb THIS PAGE SHOWS ALL THE USERS -->
<div class="max-w-2xl mx-auto">
  <h1 class="text-2xl font-bold mb-6">Users</h1>

  <div class="space-y-4">
    <% @users.each do |user| %>
      <div class="border rounded-lg p-4 flex items-center justify-between">
        <div class="flex items-center">
          <%= gravatar_for(user, size: 50) %>
          <div class="ml-4">
            <%= link_to user.username, profile_path(user) %>
            <!--<span class="font-medium"><%= user.username %></span>--->
            <!---<span class="font-medium"><%= user.email %></span> --->
            <% if user.bio.present? %>
              <div class="text-sm text-gray-600 mt-1"><%= truncate(user.bio, length: 100) %></div>
            <% end %>
            <div class="text-sm text-gray-500">
              <%= pluralize(user.followers.count, 'follower') %> â€¢ 
              Following <%= user.following.count %>
              
            </div>
          </div>
        </div>
        <%= render 'follow_button', user: user %>
      </div>
    <% end %>
  </div>
</div>