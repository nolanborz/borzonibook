<% if devise_mapping.omniauthable? %>
  <% resource_class.omniauth_providers.each do |provider| %>
    <%= button_to omniauth_authorize_path(resource_name, provider),
        method: :post,
        data: { turbo: false },
        class: "w-full flex justify-center py-2 px-4 border border-gray-300 rounded-md shadow-sm text-sm font-medium text-gray-700 bg-white hover:bg-gray-50" do %>
      Sign in with <%= OmniAuth::Utils.camelize(provider) %>
    <% end %>
  <% end %>
<% end %>