<div class="max-w-md mx-auto mt-8 p-6 bg-white rounded-lg shadow">
  <h2 class="text-2xl font-bold mb-6">Sign up</h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="mb-4">
      <%= f.label :username, class: "block text-sm font-medium text-gray-700 mb-1" %>
      <%= f.text_field :username, autocomplete: "username", class: "w-full p-2 border rounded-md focus:ring-blue-500 focus:border-blue-500" %>
    </div>

    <div class="mb-4">
      <%= f.label :email, class: "block text-sm font-medium text-gray-700 mb-1" %>
      <%= f.email_field :email, autocomplete: "email", class: "w-full p-2 border rounded-md focus:ring-blue-500 focus:border-blue-500" %>
    </div>

    <div class="mb-4">
      <%= f.label :password, class: "block text-sm font-medium text-gray-700 mb-1" %>
      <%= f.password_field :password, autocomplete: "new-password", class: "w-full p-2 border rounded-md focus:ring-blue-500 focus:border-blue-500" %>
      <% if @minimum_password_length %>
        <p class="mt-1 text-sm text-gray-500">(<%= @minimum_password_length %> characters minimum)</p>
      <% end %>
    </div>

    <div class="mb-6">
      <%= f.label :password_confirmation, class: "block text-sm font-medium text-gray-700 mb-1" %>
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "w-full p-2 border rounded-md focus:ring-blue-500 focus:border-blue-500" %>
    </div>

    <div class="flex justify-between items-center">
      <%= f.submit "Sign up", class: "px-4 py-2 bg-blue-500 text-white rounded-md hover:bg-blue-600" %>
      <%= render "devise/shared/links" %>
    </div>
  <% end %>
</div>